{
  "policy_tiers": [
    "dmz",
    "app",
    "data",
    "endpoints"
  ],
  "policy_rules": [
    {
      "name": "dmz_to_app_https",
      "from_tier": "dmz",
      "to_tier": "app",
      "protocol": "tcp",
      "from_port": 443,
      "to_port": 443,
      "desc": "DMZ to App on HTTPS"
    },
    {
      "name": "app_to_data_db",
      "from_tier": "app",
      "to_tier": "data",
      "protocol": "tcp",
      "from_port": 5432,
      "to_port": 5432,
      "desc": "App to Data on DB port (example: Postgres)"
    },
    {
      "name": "dmz_to_app_http",
      "from_tier": "dmz",
      "to_tier": "app",
      "protocol": "tcp",
      "from_port": 80,
      "to_port": 80,
      "desc": "DMZ to App HTTP (ALB health checks)"
    }
  ]
}